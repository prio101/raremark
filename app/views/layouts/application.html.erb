<!DOCTYPE html>
<html>
  <head>
    <title>RaremarkSurvey</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="jumbotron mx-auto">
      <h1 class="display-4 ml-5">RareMark</h1>
      <p class="lead">Assignment for the Inteview</p>
      <hr class="my-4">
      
      <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
      <%= link_to "Answers", answers_path, class: 'btn btn-primary btn-lg' %>
      <%= link_to "Questions", surveys_path, class: 'btn btn-primary btn-lg' %>
    </div>
    <%= yield %>
  </body>
</html>
