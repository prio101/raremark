<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Status</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @surveys.each_with_index do |survey, index| %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= survey.name %></td>
        <td><span class="badge badge-primary"><%= survey.status %></span></td>
        <td><%= link_to "Show", survey_path(survey) %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>